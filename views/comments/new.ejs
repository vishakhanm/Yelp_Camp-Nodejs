<%- include ('../partials/header') %>

<div class="container">
    <h1 class="text-center">Add New Comment to <%= campground.name%></h1>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST" >
            <div class="form-group">
                <input type="text" placeholder="text" name="comments[text]" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block"> Submit </button>
            </div>
           
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>


<%- include ('../partials/footer') %>