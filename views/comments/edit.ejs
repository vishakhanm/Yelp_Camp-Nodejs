<%- include ('../partials/header') %>

<div class="container">
    <h1 class="text-center">Edit Comment</h1>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" >
            <div class="form-group">
                <input type="text" value="<%= comment.text %>" name="comment[text]" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block"> Submit </button>
            </div>
           
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>


