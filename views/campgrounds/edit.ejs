<%- include ('../partials/header') %>

<div class="container">
    <h1 class="text-center">Edit <%=campground.name %></h1>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST" >
            <div class="form-group">
                <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" value="<%= campground.price %>" name="campground[price]" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.description %>" name="campground[description]" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block"> Update </button>
            </div>
           
        </form>
        <a href="/campgrounds">Back</a>
    </div>
    
</div>


<%- include ('../partials/footer') %>